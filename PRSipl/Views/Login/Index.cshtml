@model PRSipl.Models.User
@{

    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login ABC</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/PRSLogin/images/icons/favicon.png" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/PRSLogin/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/PRSLogin/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/PRSLogin/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/PRSLogin/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/PRSLogin/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/PRSLogin/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/PRSLogin/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/PRSLogin/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/PRSLogin/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/PRSLogin/css/main.css">
    <!--===============================================================================================-->

    <style>
        body {
            background-image: url('~/PRSLogin/images/bg-01.jpg');
        }
    </style>

</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                @using (Html.BeginForm(FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <span class="login100-form-logo">
                        <i class="zmdi zmdi-account"></i><br>
                    </span>
                    <span class="login100-form-title p-b-34 p-t-27">
                        Log in to ABC Org
                    </span>
                    <div class="form-group">
                        <div class="wrap-input100 validate-input" data-validate="Enter username" style="padding-left:20px;">
                            @Html.TextBoxFor(m => m.User_Name, new { @id = "username", @name = "username", @class = "input100", placeholder = "Username" })
                            @Html.ValidationMessageFor(m => m.User_Name, "", new { @class = "error text-danger" })
                            <span class="focus-input100" data-placeholder="&#xf207;"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="wrap-input100 validate-input" data-validate="Enter password" style="padding-left:20px;">
                            @Html.PasswordFor(m => m.Password, new {@id = "password", @name = "password", @class = "input100", placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger error" })
                            <span class="focus-input100" data-placeholder="&#xf191;"></span>
                        </div>
                    </div>
                    @ViewBag.message
                    <div>
                    </div>
                    <div class="form-group">
                        <div class="container-login100-form-btn">
                            <input type="submit" value="Log in" id ="submit" class="btn btn-default login100-form-btn" />
                            <input type="reset" value="Clear" id = "clear" class="btn login100-form-btn" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>



    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/PRSLogin/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/PRSLogin/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/PRSLogin/vendor/bootstrap/js/popper.js"></script>
    <script src="~/PRSLogin/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/PRSLogin/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/PRSLogin/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/PRSLogin/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/PRSLogin/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/PRSLogin/js/main.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
</body>

</html>